; more or less the default config with edits that rip out a lot of unneeded stuff

[colors]
;background = ${xrdb:color0:#222}
background = #00202020
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #fff
foreground-alt = #dfdfdf
primary = #634690
secondary = #D8E
alert = #bd2c40
batfull = #00ff00
batcharge = #ffff00
doorstuck = #ff0000

[bar/example]
monitor = LVDS-1
width = 100%
height = 19
;19 happens to work perfectly with dmenu so off we go with that
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-bottom = 0
border-color = ${colors.primary}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Terminus:pixelsize=14;2
font-1 = Terminus:pixelsize=20;2
font-2 = Terminus:pixelsize=20;3

modules-left = openbracket bspwm closebracket separatinghighlight highlighttobase
modules-center = basetohighlight openbracket xbindow closebracket highlighttobase
modules-right = basetohighlight openbracketspace battery separatinghighlight date separatinghighlight powermenu closebracketspace separatinghighlight
;modules-right = basetohighlight openbracketspace memory separatinghighlight cpu separatinghighlight date separatinghighlight powermenu closebracketspace separatinghighlight

tray-position = right
tray-padding = 2
tray-background = ${colors.primary}

wm-restack = bspwm
;wm-restack = i3

override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5
label-full-background = ${colors.primary}
label-full-foreground = ${colors.batfull}
label-charging-background = ${colors.primary}
label-charging-foreground = ${colors.foreground}
label-discharging-background = ${colors.primary}
label-discharging-foreground = ${colors.foreground}

[module/separating]
type = custom/text
content = "  "

[module/separatinghighlight]
type = custom/text
content = "  "
content-background = ${colors.primary}
content-foreground = ${colors.primary}

[module/openbracket]
type = custom/text
content = "%{T3}[%{T-}"
content-background = ${colors.primary}
content-foreground = ${colors.foreground}

[module/closebracket]
type = custom/text
content = "%{T3}]%{T-}"
content-background = ${colors.primary}
content-foreground = ${colors.foreground}

[module/openbracketspace]
type = custom/text
content = "%{T3}[ %{T-}"
content-background = ${colors.primary}
content-foreground = ${colors.foreground}

[module/closebracketspace]
type = custom/text
content = "%{T3} ]%{T-}"
content-background = ${colors.primary}
content-foreground = ${colors.foreground}

[module/basetohighlight]
type = custom/text
content = %{T2}░▒▓█%{T-}
content-background = ${colors.background}
content-foreground = ${colors.primary}

[module/highlighttobase]
type = custom/text
content = %{T2}█▓▒░%{T-}
content-background = ${colors.background}
content-foreground = ${colors.primary}

[module/xwindow]
type = internal/xwindow
label = %title:0:20:...%
label-alignment = center
label-minlen = 20

[module/xbindow]
type = internal/xwindow
label = %title:0:40:...%
label-alignment = center
label-minlen = 45
label-background = ${colors.primary}
label-foreground = ${colors.foreground}

[module/deadbeef]
type = custom/script
exec = deadbeef --nowplaying "%a - %t [%b]" 2>/dev/null
; in case you want to pipe it to OBS:
;exec = deadbeef --nowplaying "%a - %t [%b]" 2>/dev/null | tee ~/song.txt
label-alignment = center
label-minlen = 60
label-maxlen = 120
interval = 1
label-background = ${colors.primary}
label-foreground = ${colors.foreground}

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.secondary}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1
label-occupied-background = ${colors.primary}

label-urgent = %name% UH OH STINKY
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-background = ${colors.primary}
label-empty-padding = 1

; Separator in between workspaces
;label-separator = |

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-background = ${colors.primary}
format-underline = ${colors.primary}
label = %percentage:2%%
label-background = ${colors.primary}
label-foreground = ${colors.foreground}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-background = ${colors.primary}
format-underline = ${colors.primary}
label = %percentage_used%%
label-background = ${colors.primary}
label-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%Y-%m-%d"

time = "%H:%M"
time-alt = " %H:%M:%S"

format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
format-prefix-background = ${colors.primary}

label = %date%%time%
label-background = ${colors.primary}
label-foreground = ${colors.foreground}


[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 0

label-open = Power Menu
label-open-foreground = ${colors.secondary}
label-open-background = ${colors.primary}
label-close = cancel
label-close-foreground = ${colors.secondary}
label-close-background = ${colors.primary}
label-separator = " | "
label-separator-foreground = ${colors.foreground-alt}
label-separator-background = ${colors.primary}
format-underline = ${colors.primary}
format-prefix-background = ${colors.primary}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-0-foreground = ${colors.foreground-alt}
menu-0-0-background = ${colors.primary}
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-1-foreground = ${colors.foreground-alt}
menu-0-1-background = ${colors.primary}

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-0-foreground = ${colors.foreground-alt}
menu-1-0-background = ${colors.primary}
menu-1-1 = reboot
menu-1-1-exec = sudo reboot
menu-1-1-foreground = ${colors.foreground-alt}
menu-1-1-background = ${colors.primary}

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-0-foreground = ${colors.foreground-alt}
menu-2-0-background = ${colors.primary}
menu-2-1 = cancel
menu-2-1-exec = menu-open-0
menu-2-1-foreground = ${colors.foreground-alt}
menu-2-1-background = ${colors.primary}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

